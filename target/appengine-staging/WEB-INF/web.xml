<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <!-- JSPC servlet mappings start -->

    <servlet>
        <servlet-name>org.apache.jsp.confirm_jsp</servlet-name>
        <servlet-class>org.apache.jsp.confirm_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.create_jsp</servlet-name>
        <servlet-class>org.apache.jsp.create_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.createJSP_jsp</servlet-name>
        <servlet-class>org.apache.jsp.createJSP_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.eventdetails_jsp</servlet-name>
        <servlet-class>org.apache.jsp.eventdetails_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.eventList_jsp</servlet-name>
        <servlet-class>org.apache.jsp.eventList_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.index_jsp</servlet-name>
        <servlet-class>org.apache.jsp.index_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.layout_jsp</servlet-name>
        <servlet-class>org.apache.jsp.layout_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.test_jsp</servlet-name>
        <servlet-class>org.apache.jsp.test_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.userapi_jsp</servlet-name>
        <servlet-class>org.apache.jsp.userapi_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.WEB_002dINF.layout_jsp</servlet-name>
        <servlet-class>org.apache.jsp.WEB_002dINF.layout_jsp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.confirm_jsp</servlet-name>
        <url-pattern>/confirm.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.create_jsp</servlet-name>
        <url-pattern>/create.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.createJSP_jsp</servlet-name>
        <url-pattern>/createJSP.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.eventdetails_jsp</servlet-name>
        <url-pattern>/eventdetails.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.eventList_jsp</servlet-name>
        <url-pattern>/eventList.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.index_jsp</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.layout_jsp</servlet-name>
        <url-pattern>/layout.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.test_jsp</servlet-name>
        <url-pattern>/test.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.userapi_jsp</servlet-name>
        <url-pattern>/userapi.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.WEB_002dINF.layout_jsp</servlet-name>
        <url-pattern>/WEB-INF/layout.jsp</url-pattern>
    </servlet-mapping>

<!-- JSPC servlet mappings end -->

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <security-constraint>
    <web-resource-collection>
        <web-resource-name>blog</web-resource-name>
        <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
        <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
</security-constraint>
</web-app>